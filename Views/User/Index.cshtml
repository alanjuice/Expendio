@model Expendio.ViewModel.IndexViewModel


<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="mb-3">
            <a asp-action="Add" asp-controller="User" class="btn btn-primary">Add Data</a>
        </div>

        <div class="col-md-6">
            <h2>Daily Expenses</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DayExpenses != null && Model.DayExpenses.Any())
                    {
                        foreach (var expense in Model.DayExpenses)
                        {
                            <tr>
                                <td>@expense.Category</td>
                                <td>@expense.Amount.ToString("C")</td>
                                <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">No expenses available for today.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

